<?xml version="1.0" encoding="utf-8"?>
<dependencies>
  <androidPackages>
    <!-- Amplitude Experiment Android SDK -->
    <!-- Note: Analytics SDK is provided by the main Amplitude Unity Plugin -->
    <androidPackage spec="com.amplitude:experiment-android-client:1.12.0">
      <excludes>
        <!-- Exclude analytics-connector to prevent duplicates -->
        <exclude group="com.amplitude" module="analytics-connector" />
      </excludes>
    </androidPackage>
    
    <!-- OkHttp - force newer version to avoid conflicts -->
    <androidPackage spec="com.squareup.okhttp3:okhttp:4.11.0" />
  </androidPackages>
</dependencies>